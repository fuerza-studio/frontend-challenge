{
  "name": "frontend-boilerplate",
  "description": "A modern Front-end boilerplate which uses the Webpack module bundler.",
  "author": {
    "name": "Fuerza Studio",
    "email": "paulo@fuerzastudio.com",
    "url": "http://fuerzastudio.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Fuerza-Studio/frontend-challenge"
  },
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve -c ./build/webpack.development.js",
    "build": "cross-env NODE_ENV=production webpack -c ./build/webpack.production.js",
    "serve": "http-serve ./dist",
    "lint": "run-s -cl lint:scripts lint:styles",
    "lint:scripts": "eslint --color ./src/scripts/**",
    "lint:styles": "stylelint --color ./src/styles/**",
    "lint-fix:scripts": "eslint --color --fix ./src/scripts/**",
    "lint-fix:styles": "stylelint --color --fix ./src/styles/**"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "autoprefixer": "^10.3.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.0",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^13.0.2",
    "import-glob": "^1.5.0",
    "mini-css-extract-plugin": "^2.3.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-discard-comments": "^5.0.1",
    "postcss-loader": "^6.1.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "dependencies": {
    "bootstrap": "^5.1.1"
  }
}
